@page
@model PRN221_Project.Pages.CoursePage.ListCourseModel
@{
}

<!-- Header Start -->
<div class="container-fluid page-header" style="margin-bottom: 90px;">

    <div class="container">
        <div class="d-flex flex-column justify-content-center" style="min-height: 300px">
            <div class="d-inline-flex text-white">
                <p class="m-0 text-uppercase"><a class="text-white" href="">Home</a></p>
                <i class="fa fa-angle-double-right pt-1 px-3"></i>
            </div>
        </div>
    </div>
</div>
<!-- Header End -->
<!-- Blog Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8">
                <div class="row pb-3">
                    @foreach (var item in Model.listCourse)
                    {
                        <div class="col-lg-6 mb-4">
                            <div class="blog-item position-relative overflow-hidden rounded mb-2">
                                <img class="img-fluid" src="~/img/blog-1.jpg" alt="">
                                <a class="blog-overlay text-decoration-none" asp-page="DetailCourse" asp-route-id="@item.CourseId">
                                    <h5 class="text-white mb-3">@item.Title</h5>
                                </a>

                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="col-lg-4 mt-5 mt-lg-0">
